<%= form_with(model: video_file, local: true) do |form| %>
  <%= render 'shared/error_messages', object: form.object %>

  <div class="field">
    <%= form.label :item %>
    <% if video_file.item.present? %>
      <video controls>
        <source src="<%= video_file.item_url %>"
          type="<%= video_file.item.content_type %>">
        Your browser does not support the video element.
      </video> 
    <% end %>
    <%= form.file_field :item, class: 'form-control' %>
    <%= form.hidden_field :item_cache %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
