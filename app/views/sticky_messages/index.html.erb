<h1>Sticky Messages</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Draft</th>
      <th>Published</th>
      <th>Important</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sticky_messages.each do |sticky_message| %>
      <tr>
        <td><%= sticky_message.content %></td>
        <td><%= sticky_message.draft %></td>
        <td><%= sticky_message.published %></td>
        <td><%= sticky_message.important %></td>
        <td><%= sticky_message.user %></td>
        <td><%= link_to 'Show', sticky_message %></td>
        <td><%= link_to 'Edit', edit_sticky_message_path(sticky_message) %></td>
        <td><%= link_to 'Destroy', sticky_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sticky Message', new_sticky_message_path %>
