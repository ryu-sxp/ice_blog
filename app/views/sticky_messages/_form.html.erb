<%= form_with(model: sticky_message, local: true) do |form| %>
  <% if sticky_message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sticky_message.errors.count, "error") %> prohibited this sticky_message from being saved:</h2>

      <ul>
      <% sticky_message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
