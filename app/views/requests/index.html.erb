<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Referer</th>
      <th>Useragent</th>
      <th>Request</th>
      <th>New visitor</th>
      <th>Is bot</th>
      <th>Counter flag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.referer %></td>
        <td><%= request.useragent %></td>
        <td><%= request.request %></td>
        <td><%= request.new_visitor %></td>
        <td><%= request.is_bot %></td>
        <td><%= request.counter_flag %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

