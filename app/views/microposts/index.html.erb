<h1>Microposts</h1>

<table>
  <thead>
    <tr>
      <th>Published date</th>
      <th>Content</th>
      <th>Published</th>
      <th>Toot ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.published_date %></td>
        <td><%= micropost.content %></td>
        <td><%= micropost.published %></td>
        <td><%= micropost.toot_id %></td>
        <td><%= link_to 'Show', micropost %></td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
        <% unless micropost.toot_id.present? %>
          <td><%= link_to 'Repush to mstdn',
            push_micropost_to_mstdn_path(micropost),
            method: :patch, data: 
            { confirm: 'Are you sure to push this post?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micropost', new_micropost_path %>
