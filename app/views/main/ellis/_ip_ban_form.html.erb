<%= form_with model: @ip_blacklist, remote: true do |form| %>
  <%= render 'shared/error_messages', object: form.object %>

  <div class="field">
    <%= form.label :duration %>
    <%= form.text_field :duration, class: 'form-control',
      placeholder: 'ban duration in hours' %>
  </div>
  <div class="field">
    <%= form.label :reason %>
    <%= form.text_field :reason, class: 'form-control',
      placeholder: '' %>
  </div>
  <% if @ip_blacklist.ip.present? %>
    <%= form.hidden_field :ip, value: @ip_blacklist.ip %>
    <%= form.hidden_field :comment_id, value: @comment_id %>
  <% else %>
    <%= form.hidden_field :ip, value: comment.ip %>
    <%= form.hidden_field :comment_id, value: comment.id %>
  <%end%>
  <%= form.submit 'add ip to blacklist', class: 'form-btn' %>
<% end %>
