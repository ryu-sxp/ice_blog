<h1>Blog Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blog_categories.each do |blog_category| %>
      <tr>
        <td><%= blog_category.name %></td>
        <td><%= link_to 'Show', blog_category %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
